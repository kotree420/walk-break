<div class="container col-xxl-10 px-4 py-3">
  <div class="mx-auto">
    <div class="row flex-lg-row align-items-center g-5 py-3">
      <div class="col-lg-2 show-profile-image-wrapper">
        <%= image_tag @user.profile_image.url, class: 'show-profile-image' %>
      </div>
      <div class="col-lg-10">
        <span><%= @user.name %></span>
        <span><%= link_to "プロフィール編集", edit_profile_path %></span>
        <p>コメント：<%= @user.comment %></p>
      </div>
    </div>
  </div>
</div>
